<% if @my_good.do_good?(user_id) %>
    <%= button_to good_un_good_path(user_id), method: :delete, remote: true do %>
        <i class="bi bi-heart"></i>
    <% end %>
<% else %>
    <%= button_to good_do_good_path(user_id), method: :post,   remote: true do %>
        <i class="bi bi-heart-fill"></i>
    <% end %>
<% end %>