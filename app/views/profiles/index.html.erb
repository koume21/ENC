<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>User name</th>
      <th>School</th>
      <th>Profile image</th>
      <th>Grade</th>
      <th>Club</th>
      <th>Type</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.user_id %></td>
        <td><%= profile.user_name %></td>
        <td><%= profile.school_id %></td>
        <td><%= profile.profile_image %></td>
        <td><%= profile.grade %></td>
        <td><%= profile.club_id %></td>
        <td><%= profile.type_id %></td>
        <td><%= profile.comments %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

