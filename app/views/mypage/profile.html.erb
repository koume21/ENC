<!DOCTYPE html>
<html>
  <head>
    <title>ENC</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'mypage', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="my_profile">
      <%= @user.login %>
      <br>
      <%= @user.profile.user_name %>
      <br>
      <%= @user.profile.comments %>
      <p>プロフィール編集</p>
      <div class=modal>
        <%= form_with url: "/mypage/update",model: @profile do |form| %>
         <div>
            <%= form.label "ユーザーネーム" %>
            <%= form.text_field :user_name %>
         </div>
         <div>
            <%= form.label "学校名" %>
            <%= form.text_field :school_id %>
         </div>
         <div>
            <%= form.label "プロフィール画像" %>
            <%= form.text_field :profile_image %>
         </div>
         <div>
            <%= form.label "学年" %>
            <%= form.text_field :grade %>
         </div>
         <div>
            <%= form.label "部活動" %>
            <%= form.text_field :club_id %>
         </div>
         <div>
            <%= form.label "性別" %>
            <%= form.text_field :type_id %>
         </div>
         <div>
            <%= form.label "一言" %>
            <%= form.text_field :comments %>
         </div>
         <div>
            <%= form.submit "更新" %>
         </div>
       <% end %>
      </div>
    </div>
    <%= @user.profile.user_name %>
    <%= @user.profile.school_id %>
    <%= @user.profile.profile_image %>
    <%= @user.profile.grade %>
    <%= @user.profile.user_name %>
    <%= @user.profile.user_name %>
    <%= @user.profile.user_name %>

    
    

    
  </body>
</html>
