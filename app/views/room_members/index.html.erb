<p id="notice"><%= notice %></p>

<h1>Room Members</h1>

<table>
  <thead>
    <tr>
      <th>Room</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_members.each do |room_member| %>
      <tr>
        <td><%= room_member.room_id %></td>
        <td><%= room_member.user_id %></td>
        <td><%= link_to 'Show', room_member %></td>
        <td><%= link_to 'Edit', edit_room_member_path(room_member) %></td>
        <td><%= link_to 'Destroy', room_member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room Member', new_room_member_path %>
